# Add `~/bin` to the `$PATH`
export PATH="$PATH:$HOME/bin"

# default language
export LC_ALL="en_GB.UTF-8"
export LANG="en_GB.UTF-8"

# grep options
export GREP_OPTIONS="--color=auto"

# MySQL PS1
export MYSQL_PS1="\u@\h:\d> "

# git PS1
export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
export GIT_PS1_SHOWUPSTREAM=1
export PS1="\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[G\]\u@\h:\w\$(__git_ps1_custom)\$ "

# Make vim the default editor
export EDITOR="vim"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# less settings and colours
export LESS="-R"
export LESSCHARSET=utf-8
export LESS_TERMCAP_mb=$'\E[01;31m'       # begin blinking
export LESS_TERMCAP_md=$'\E[01;38;5;74m'  # begin bold
export LESS_TERMCAP_me=$'\E[0m'           # end mode
export LESS_TERMCAP_se=$'\E[0m'           # end standout-mode
export LESS_TERMCAP_so=$'\E[38;5;246m'    # begin standout-mode - info box
export LESS_TERMCAP_ue=$'\E[0m'           # end underline
export LESS_TERMCAP_us=$'\E[04;38;5;219m' # begin underline

# Larger bash history (allow 32k entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups

# Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"
