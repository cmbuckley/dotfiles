if tput setaf 1 &> /dev/null; then
	tput sgr0
	if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
		MAGENTA=$(tput setaf 9)
		ORANGE=$(tput setaf 172)
		GREEN=$(tput setaf 190)
		PURPLE=$(tput setaf 141)
		WHITE=$(tput setaf 256)
	else
		MAGENTA=$(tput setaf 5)
		ORANGE=$(tput setaf 4)
		GREEN=$(tput setaf 2)
		PURPLE=$(tput setaf 1)
		WHITE=$(tput setaf 7)
	fi
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	MAGENTA="\033[1;31m"
	ORANGE="\033[1;33m"
	GREEN="\033[1;32m"
	PURPLE="\033[1;35m"
	WHITE="\033[1;37m"
	BOLD=""
	RESET="\033[m"
fi

# custom git PS1
__git_ps1_custom() {
    __git_ps1 | gawk '
    function color(col, str) {
        if (str == "") { str = "&" }
        return "\001\033[00;" col "m\002" str "\001\033[0m\002"
    }
    {
        sub(/\*/,    color(32))
        sub(/\+/,    color(33))
        sub(/%/,     color(36))
        sub(/<|<?>/, color(31))
        sub(/=\)/,   ")")

        print gensub(/\(\(([^)]+)\)/, "(" color(31, "\\1"), "g")
    }'
}

# git PS1
export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
export GIT_PS1_SHOWUPSTREAM=1
export PS1="\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[G\]\u@\h:\w\$(__git_ps1_custom)\$ "

