[user]
    name = Chris Buckley
    email = chris@cmbuckley.co.uk

[alias]
    ap = add --patch
    aw = !sh -c 'git diff --ignore-space-at-eol --no-color "$@" | git apply --cached --ignore-whitespace'
    bm = branch --merged
    bd = !sh -c 'git branch -d $1 && git push origin :refs/heads/$1' -
    br = branch
    ca = commit --amend
    cb = rev-parse --symbolic-full-name --abbrev-ref HEAD
    ci = commit
    co = checkout
    cp = cherry-pick
    di = diff
    dc = diff --cached
    dn = push -u origin HEAD
    du = diff @{u} HEAD
    fo = fetch --prune --tags
    in = !git init && touch .gitignore && git add .gitignore && git commit -m 'Initial commit'
    lp = log -p
    ls = ls-files
    lu = log HEAD --not @{u} --reverse -p
    ma = merge --abort
    mb = merge-base
    mr = merge --no-ff
    mt = mergetool
    ob = !test "`git cb`" != "HEAD"
    pl = pull
    pr = !sh -c 'git fetch ${2-origin} pull/$1/head:pr/$1 && git checkout pr/$1' -
    ra = rebase --abort
    rc = rebase --continue
    rh = !sh -c 'git reset --hard ${1-@{u\\}}' -
    ri = rebase --interactive
    rl = reflog
    rp = !sh -c 'git rev-parse ${1-HEAD}' -
    rr = rev-parse --symbolic-full-name --abbrev-ref
    rs = rebase --skip
    rv = remote -v
    sd = !sh -c 'git stash drop stash@{${1-0}}' -
    sl = stash list
    sp = !sh -c 'git stash pop stash@{${1-0}}' -
    ss = !sh -c 'git stash show stash@{${1-0}} -p --no-prefix' -
    st = status
    td = !sh -c 'git tag -d $1 && git push origin :refs/tags/$1' -
    tl = tag -l
    uk = !sh -c 'git status -s ${@:-.} | grep -F "\\?\\?" | cut -c4-' -
    up = !git fetch --prune && git rebase -p @{u}
    ur = !sh -c 'git status -s ${@:-.} | grep -F "\\?\\?" | cut -c4- | xargs -I {} rm -rf -- "{}"' -

[apply]
    #whitespace = fix

[bash]
    #showDirtyState should be false on large repositories
    showDirtyState = true
    showUpstream = true

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = blue bold

[color "grep"]
    match = red bold
    filename = magenta
    linenumber = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
    nobranch = red

[core]
    editor = vim
    pager = less -FRSX
    #whitespace = fix,tab-in-indent,tabwidth=4

[diff]
    renames = copy
    noprefix = true

[diff "mwbdiff"]
    #textconv = mwbdump

[merge]
    tool = vimdiff

[mergetool]
	keepBackup = false

[pager]
    status = true

[push]
    default = upstream

[tig]
    tab-size = 4
    commit-order = topo
    vertical-split = no
